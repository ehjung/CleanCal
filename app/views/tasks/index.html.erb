<h1>Tasks</h1>
  
<table>
  <div class = 'btn btn-group'>
  <td><%= link_to 'Add Task', new_task_path(scheduleid: params[:scheduleid]), :class => "btn btn-default"%></td>

  <td><%= link_to 'Generate Calendar', schedules_path, method: controller.generate_events(params[:scheduleid]), :class => "btn btn-default" %></td> 
</div>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.action %></td>
        <div class='btn btn-group'>
        <td><%= link_to 'Delete', task, method: :delete, :class => "btn btn-default"%></td>
      </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


